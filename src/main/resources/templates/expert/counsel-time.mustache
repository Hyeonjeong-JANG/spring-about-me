<script>
    $(document).ready(function () {
        $('#save-schedule').on('click', function () {
            const scheduleData = {
                monday: {
                    start: $('select[name="monday-start"]').val(),
                    end: $('select[name="monday-end"]').val()
                },
                tuesday: {
                    start: $('select[name="tuesday-start"]').val(),
                    end: $('select[name="tuesday-end"]').val()
                },
                wednesday: {
