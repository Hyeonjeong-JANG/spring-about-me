    <style>
        .calwendar {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 60%;
        }
        .times {
            width: 35%;
            margin-left: 2%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .days {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 10px;
            width: 100%;
            text-align: center;
        }
        .day {
            padding: 10px;
            border: 1px solid #ddd;
            cursor: pointer;
        }
        .day.selected {
            background-color: #00aaff;
            color: white;
        }
        .day.past {
            color: #ccc;
            cursor: not-allowed;
        }
        .time-btn {
            display: block;
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            background-color: #e0f7fa;
            border: none;
            cursor: pointer;
            text-align: center;
        }
        .time-btn:hover {
            background-color: #00aaff;
            color: white;
        }
    </style>

