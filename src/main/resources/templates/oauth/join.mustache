{{> layout/client-header}}

<div class="join-wrap">
    <h1 class="join-title">회원가입</h1>
    <div class="join-toggle mb-4">
        <button class="join-active btn btn-outline-success me-2" onclick="toggleTab('personal1')">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                <path d="M15.854 5.854a.5.5 0 0 0-.708-.708L7 13.293 2.854 9.146a.5.5 0 1 0-.708.708l4.5 4.5a.5.5 0 0 0 .708 0l8-8z"/>
            </svg>
            개인 회원
        </button>
        <button class="btn btn-outline-secondary" onclick="toggleTab('advisor1')">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                <path d="M15.854 5.854a.5.5 0 0 0-.708-.708"/>
            </svg>
            상담사
        </button>
    </div>
    <hr class="join-divider mb-5">
    <button class="join-btn" data-bs-toggle="modal" data-bs-target="#joinModal">아이디/비밀번호로 회원가입</button>
    <hr class="join-divider mt-5">
    <div class="join-social">
        <a href="#"><img src="./images/naver_oauth.png" alt="Naver Signup"></a>
        <a href="#"><img src="./images/kakao_oauth.png" alt="Kakao Signup"></a>
    </div>
</div>
<!-- 회원가입 모달 -->
<div class="modal fade" id="joinModal" tabindex="-1" aria-labelledby="joinModalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content join-modal-content">
            <div class="modal-header join-modal-header">
                <h5 class="modal-title join-modal-title" id="joinModalTitle">회원가입</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body join-modal-body">
                <form method="post">
                    <div class="form-group join-form-group">
                        <label for="join-email">이메일로 회원가입</label>
                        <input type="email" class="form-control join-form-control" id="join-email" placeholder="example@example.com">
                    </div>
                    <!-- 비밀번호 입력 필드 -->
                    <div class="form-group join-form-group">
                        <label for="join-password">비밀번호</label>
                        <div class="input-group">
                            <input type="password" class="form-control join-form-control" id="join-password" placeholder="비밀번호">
                            <span class="input-group-text" id="togglePassword">
            <i class="fas fa-eye"></i>
        </span>
                        </div>
                    </div>

                    <!-- 비밀번호 확인 입력 필드 -->
                    <div class="form-group join-form-group">
                        <label for="join-password-confirm">비밀번호 확인</label>
                        <div class="input-group">
                            <input type="password" class="form-control join-form-control" id="join-password-confirm" placeholder="비밀번호 확인">
                            <span class="input-group-text" id="togglePasswordConfirm">
            <i class="fas fa-eye"></i>
        </span>
                        </div>
                    </div>

                    <div class="form-group join-form-group">
                        <label for="join-username">닉네임</label>
                        <input type="text" class="form-control join-form-control" id="join-username" placeholder="닉네임">
                    </div>
                </form>
            </div>
            <div class="modal-footer join-modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">취소</button>
                <button type="button" class="btn btn-primary">다음</button>
            </div>
        </div>
    </div>
</div>

{{> layout/footer}}
